{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./type", "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@openapi/*": ["__generated__/openapi/*"],
      "@service/*": ["service/*"],
      "@repo/*": ["repo/*"],
      "@db/*": ["db/*"],
      "@middlewares/*": ["middlewares/*"],
      "@shared/*": ["shared/*"],
      "@type/*": ["type/*"],
      "@util/*": ["util/*"]
    }    
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
